@page
@model KoiPondConstruct.RazorApp.Pages.CusReqDetails.CreateModel
@{
    ViewData["Title"] = "Create Customer Request Detail";
}

<h1>Create Customer Request Detail</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.RequestId" class="control-label"></label>
        <select asp-for="TblCustomerRequestDetail.RequestId" class="form-control" asp-items="@(ViewData["RequestId"] as SelectList)">
            <option value="">-- Select a Request --</option>
        </select>
        <span asp-validation-for="TblCustomerRequestDetail.RequestId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.HomeownerFirstName" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.HomeownerFirstName" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.HomeownerFirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.HomeownerLastName" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.HomeownerLastName" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.HomeownerLastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.HomeownerPhone" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.HomeownerPhone" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.HomeownerPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.HomeownerDateOfBirth" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.HomeownerDateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.HomeownerDateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.Height" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.Height" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.Height" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.Width" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.Width" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.Width" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.Length" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.Length" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.Length" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.Shape" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.Shape" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.Shape" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.Budget" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.Budget" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.Budget" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.Type" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.Type" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.Address" class="control-label"></label>
        <input asp-for="TblCustomerRequestDetail.Address" class="form-control" />
        <span asp-validation-for="TblCustomerRequestDetail.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TblCustomerRequestDetail.Note" class="control-label"></label>
        <textarea asp-for="TblCustomerRequestDetail.Note" class="form-control"></textarea>
        <span asp-validation-for="TblCustomerRequestDetail.Note" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
